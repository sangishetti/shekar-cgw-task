                        window.location.href = 'https://curious-astro-184413-dev-ed.develop.my.site.com/s/';
                    } else {
                        console.log('ERROR')
                    }
                }
            );
            console.log('HI THERE')
            sessionStorage.setItem('isPassSet', 'true')
        }
    </script>
    
