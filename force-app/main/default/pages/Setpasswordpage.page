    <div class="set-password-container">
        <div class="set-password-section">

            <div class='logo-container'>
                <apex:image url="{!URLFOR($Resource.ECLogo)}" alt="Company Logo"/>
            </div>
            <p class="set-password-title">Set your password</p>
            <p class="set-password-desc">Protect your account with a strong password.</p>
        
            <apex:form >
                <div class="password-input-container">
                    <input type="password" id="password" onkeyup="checkPasswordStrength();" onfocus="showStrengthIndicator();" placeholder="Password"/>
                    <img src="{!URLFOR($Resource.show_hide_icon)}" class="show-hide-icon" onclick="togglePasswordVisibility('password')" alt="Show/Hide"/>
                </div>
                <div class="password-strength-container">
                    <div class="password-strength">
                        <p class="password-strength-title">Password must include:</p>
                        <div id="length-check" class="error-msg"> 8-20 characters</div>
                        <div id="capital-check" class="error-msg"> At least one capital letter</div>
                        <div id="number-check" class="error-msg"> At least one number</div>
                        <div id="space-check" class="error-msg"> No spaces</div>
                    </div>
                </div>
                <div class="password-input-container">
                    <input type="password" id="confirmPassword" onkeyup="checkPasswordsMatch();"  onfocus="showMatchIndicator();" placeholder="Confirm password"/>
                    <img src="{!URLFOR($Resource.show_hide_icon)}" class="show-hide-icon" onclick="togglePasswordVisibility('confirmPassword')" alt="Show/Hide"/>
                </div>
                <div id="password-match" class="password-strength-container">
                    <div class="password-strength">
                        <p class="password-match-title">Password match:</p>
                        <div id="password-match-indicator" class="match-indicator"></div>
                    </div>
                </div>
                <button class="custom-button" id="submitButton" onclick="callApexMethod()">Submit</button>
                <!-- <apex:commandButton action="{!simpleMethod}" value="Save" id="theButton"/> -->
            </apex:form>
        </div>

    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const inputFields = document.querySelectorAll('.password-input-container > input');
            const parentDivs = document.querySelectorAll('.password-input-container');

            inputFields.forEach((inputField, index) => {
                inputField.addEventListener('focus', function() {
                    parentDivs[index].classList.add('focused');
                });
                
                inputField.addEventListener('blur', function() {
                    parentDivs[index].classList.remove('focused');
                });
                
            });


        });

        
        function checkPasswordStrength() {

            var password = document.getElementById('password').value;
            var lengthCheck = document.getElementById('length-check');
            var capitalCheck = document.getElementById('capital-check');
            var numberCheck = document.getElementById('number-check');
            var spaceCheck = document.getElementById('space-check');
            var strengthIndicator = document.getElementById('password-strength');
            var submitButton = document.getElementById('submitButton');
            var lengthRegex = /^.{8,20}$/;
            var capitalRegex = /[A-Z]/;
            var numberRegex = /[0-9]/;
            var spaceRegex = /\s/;
            var lengthValid = lengthRegex.test(password);
            var capitalValid = capitalRegex.test(password);
            var numberValid = numberRegex.test(password);
            var spaceValid = !spaceRegex.test(password);
            lengthCheck.className = lengthValid ? 'success' : 'error-msg';
            capitalCheck.className = capitalValid ? 'success' : 'error-msg';
            numberCheck.className = numberValid ? 'success' : 'error-msg';
            spaceCheck.className = spaceValid ? 'success' : 'error-msg';
            if (lengthValid && capitalValid && numberValid && spaceValid) {
                strengthIndicator.className = 'hidden';
                checkPasswordsMatch();
            } else {
                strengthIndicator.className = 'strength-indicator';
                submitButton.disabled = true;
            }

    }
    function checkPasswordsMatch() {

            var password = document.getElementById('password').value;
            var confirmPassword = document.getElementById('confirmPassword').value;
            var match = document.getElementById('password-match');
            var matchIndicator = document.getElementById('password-match-indicator');
            var submitButton = document.getElementById('submitButton');
            if (password === confirmPassword) {
                    matchIndicator.textContent = 'Passwords match';
                    matchIndicator.classList.remove('error-msg');
                    matchIndicator.classList.add('success');
                    submitButton.disabled = false;
                } else {
                    matchIndicator.textContent = 'Your password don’t match, please re-enter';
                    matchIndicator.classList.remove('success');
                    matchIndicator.classList.add('error-msg');
                    submitButton.disabled = true;
                }
        }
        function togglePasswordVisibility(fieldId) {
            var field = document.getElementById(fieldId);
            if (field.type === "password") {
                field.type = "text";
            } else {
                field.type = "password";
            }
        }
        function showStrengthIndicator() {
            const strengthIndicator = document.querySelector('.password-strength-container');
            if (strengthIndicator) {
                strengthIndicator.classList.add('show');
            }
        }
        function showMatchIndicator() {
            var match = document.getElementById('password-match');
            match.className = 'match-indicator';
        }
        function callApexMethod() {
